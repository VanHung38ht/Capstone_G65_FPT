    <main>
        <div class="p-2">
            <nav class="px-3 py-2 bg-white rounded shadow nav_menu">
                <div class="dropdown">
                    <div class="d-flex align-items-center cursor-pointer dropdown-toggle" style="justify-content: space-between;"  data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="me-2">Xin Chào: Admin</span>
                        <img class="navbar-profile-image" src="~/img/avtadmin.jpg">
                    </div>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="~/Logout/Index">Đăng xuất @RenderSection("Logout", required: false)</a></li>
                    </ul>
                </div>
            </nav>
        </div>
        <div>
            @RenderBody()
        </div>
    </main>
    @*Toast notification design*@
    <div id="toast"></div>
    @*Start - Base TempData*@
    @if (!string.IsNullOrEmpty(TempData["SuccessToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["WatingToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showWatingToast();
            });
        </script>
    }
    @*End - Base *@
    @*-------------------------------------------------------*@
    @*Start - Loading data TempData*@
    @if (!string.IsNullOrEmpty(TempData["SuccessLoadingDataToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessLoadingDataToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorLoadingDataToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorLoadingDataToast();
            });
        </script>
    }
    @*End - Loading data TempData*@
    @*-------------------------------------------------------*@
    @*Start - Login TempData*@
    @if (!string.IsNullOrEmpty(TempData["SuccessLoginToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessLoginToast();
            });
        </script>
    }
    @*End - Login TempData*@
    @*-------------------------------------------------------*@
    @*Start - Base ViewBag*@
    @if (!string.IsNullOrEmpty(ViewBag.SuccessToast))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToastViewBag();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(ViewBag.ErrorToast))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToastViewBag();
            });
        </script>
    }
    @*End - Base ViewBag*@
    @*-------------------------------------------------------*@
</body>
<script src="~/js/toastnotification.js"></script>
<script>
    @*Start - Base TempData*@
        function showSuccessToast() {
            toast({
                title: 'Thành công',
                message: '@TempData["SuccessToast"]',
                type: 'success',
                duration: 2000
            });
        }
    function showErrorToast() {
        toast({
            title: 'Thất bại',
            message: '@TempData["ErrorToast"]',
            type: 'error',
            duration: 2000
        });
    }
    function showWatingToast() {
        toast({
            title: 'Thất bại',
            message: '@TempData["WatingToast"]',
            type: 'wating',
            duration: 2000
        });
    }
    @*End - Base *@
    @*-------------------------------------------------------*@
    @*Start - LoadingData TempData*@
        function showSuccessLoadingDataToast() {
            toast({
                title: 'Thành công',
                message: '@TempData["SuccessLoadingDataToast"]',
                type: 'success',
                duration: 2000
            });
        }
    function showErrorLoadingDataToast() {
        toast({
            title: 'Thất bại',
            message: '@TempData["ErrorLoadingDataToast"]',
            type: 'error',
            duration: 2000
        });
    }
    @*End - LoadingData *@
    @*-------------------------------------------------------*@
    @*Start - Login TempData*@
        function showSuccessLoginToast() {
            toast({
                title: 'Thành công',
                message: '@TempData["SuccessLoginToast"]',
                type: 'success',
                duration: 2000
            });
        }
    @*End - Login TempData*@
    @*-------------------------------------------------------*@
    @*Start - Base ViewBag*@
        function showSuccessToastViewBag() {
            toast({
                title: 'Thành công',
                message: '@ViewBag.SuccessToast',
                type: 'success',
                duration: 2000
            });
        }

    function showErrorToastViewBag() {
        toast({
            title: 'Thất bại',
            message: '@ViewBag.ErrorToast',
            type: 'error',
            duration: 2000
        });
    }
    @*End - Base ViewBag*@
    @*-------------------------------------------------------*@
    @*Start - Base ViewBag*@
        function showErrorToastCheckInput() {
            toast({
                title: 'Thất bại',
                message: 'Vui lòng điền đầy đủ thông tin.',
                type: 'wating',
                duration: 2000
            });
        }
    @*End - Base ViewBag*@
    @*-------------------------------------------------------*@
    @*Start - Base ViewBag*@
        function showErrorToastInvalidTimeRoom() {
            toast({
                title: 'Thất bại',
                message: 'Đặt phòng thất bại, vui lòng kiểm tra lại ngày đặt phòng.',
                type: 'wating',
                duration: 2000
            });
        }
    @*End - Base ViewBag*@
    @*-------------------------------------------------------*@
</script>

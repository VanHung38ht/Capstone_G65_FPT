<link rel="stylesheet" href="/css/Blog/AddBlog.css"></link>
<body>
<div class="title">
    <h1>Thêm Tag mới cho bài viết</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form asp-action="AddTag" method="post" >
        <div class="form-group">
          <label>Tên Tag<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
          <input type="text" class="form-control" name="TagName" required placeholder="Tên tag"/>
        </div>
        <div class="form-group" style="margin-top:50px;">
            <div class="row">
            <div class="sub">
            <a href="/Manager/Blog"><input  value="Trở Lại" class="btn btn-primary form-control"/></a>
            </div>
            <div class="sub">
               <input type="submit" name="Submit" value="Lưu" class="btn btn-primary form-control" />
            </div>
            </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container">
<style>
    h1 {
        text-align: center;
    }

    .future-status {
        color: gray;
    }

    .complete-status {
        color: green;
    }

    .dataTables_wrapper .dataTables_filter {
        float: right;
        margin-bottom: 10px;
    }

    .btn-add {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        border-radius: 4px;
        background-color: #E21033;
        border: none;
        color: white;
        padding: 7px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 0px 10px;
        cursor: pointer;
        float: right;
        margin-right: 30px;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            background-color: #ff6347;
        }

    .dataTables_wrapper .dataTables_filter input[type="search"] {
        margin-left: 10px;
        background-color: white;
    }

    .dataTables_wrapper {
        margin: 30px;
    }

    .btn-active {
        background-color: #43e240;
        color: white;
        font-size: 13px;
        width: 135px;
        height: 40px;
        border-radius: 5px;
    }

    .btn-inactive {
        background-color: #f2110d;
        color: white;
        font-size: 13px;
        width: 135px;
        height: 40px;
        border-radius: 5px;
    }

    .btn-detail {
        text-align: center;
        border-radius: 5px;
        font-size: 15px;
        color: white;
        display: inline-block;
        padding: 8px;
        border: 1px solid ;
        width: 100px;
        height: 40px;
        background-color: #E21033;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-detail:hover{
            color: black;
        }

</style>
<link href="~/css/toastNotification.css" rel="stylesheet" />
<link href="~/css/datatable.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        var table = $('#lists').DataTable({
            "responsive": true,
            "paging": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "columnDefs": [
                { "targets": [0], "width": "5%" },
                { "targets": [1], "width": "20%" },
                { "targets": [2], "width": "10%" },
                { "targets": [3], "width": "10%"},
            ],
            "language": {
                "lengthMenu": "Hiển thị _MENU_ dòng",
                "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                "search": "Tìm kiếm:",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Tiếp",
                    "previous": "Trước"
                }
            },
        });
    });
</script>


<h1>Danh sách bài viết</h1>

<table id="lists" class="display">
    <thead>
        <tr>
            <th>No.</th>
            <th>Tên bài viết</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
         @if (Model != null && ViewBag.Tag.Count   > 0)
        {
            int itemCount = 0;
            foreach (var blog in ViewBag.Tag )
            {
                itemCount++;
               <tr>
                    <td>@itemCount</td>
                    <td>@blog.TagName</td>
                    <td>
                         @if (@blog.Status)
                        {
                            <button class="btn btn-active">Đang hoạt động</button>
                        }
                        else
                        {
                            <button class="btn btn-inactive" >Ngưng hoạt động</button>
                        }
                    </td>
                    <td>
                        <a class="btn-detail" href="/Manager/Blog/EditTag?tagId=@blog?.TagId">Chi tiết</a>
                    </td>
                    
                </tr>
            }
        }
    </tbody>
</table>
</div>
<style>
.fa-asterisk {
            color: red;
            font-size:6px;
            padding-top:20px;
            margin-right:10px;
        }
</style>
</body>
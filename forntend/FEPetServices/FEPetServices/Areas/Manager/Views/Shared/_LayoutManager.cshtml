    <title>Quản lý - @ViewBag.Title</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">
</head>

<body>
    <div class="sidebar position-fixed top-0 bottom-0 bg-white border-end collapsed">
        <div class="d-flex align-items-center p-3">
            <div class="sidebar-logo text-uppercase fw-bold text-decoration-none text-indigo fs-3">
            @{
                string? userimagelogo = Context.Session.GetString("UserImage");
                if (userimagelogo is not null)
                {
                    <img class="navbar-profile-image" src="@userimagelogo" alt="Image">
                }
                if (userimagelogo is null)
                {
                    <img class="navbar-profile-image" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSPzVNWWirLZJ6H95_YOLsLkxju6ZNaSxdj37F7nXfd29TXvBVI9PeZWrTfYEin-XBDnkk&usqp=CAU" alt="Image">
                }
            }
            </div>
            <i class="sidebar-toggle fa-regular fa-circle-left ms-auto fs-5 d-md-block"></i>

        </div>
        <ul class="sidebar-menu p-3 m-0 mb-0">
            <li class="sidebar-menu-item active">
                <a href="~/Manager/DashBoard">
                    <i class="fa-solid fa-square-poll-vertical sidebar-menu-item-icon"></i>
                    Thống kê doanh số
                </a>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Quản lý tài khoản</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-user sidebar-menu-item-icon"></i>
                    Tài khoản
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/Information">
                            Thông tin cá nhân
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/ChangePassword">
                            Đổi mật khẩu
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Logout/Index">
                            Đăng xuất
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-users sidebar-menu-item-icon"></i>
                    Quản lý tài khoản
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/ListPartner">
                            Danh sách nhân viên
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/OrderPartner">
                            Danh sách đơn hàng của nhân viên
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Quản lý dịch vụ</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-school-flag sidebar-menu-item-icon"></i>
                    Dịch vụ
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/ServiceCategory">
                            Loại dịch vụ
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/Service">
                            Danh sách dịch vụ
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Quản lý Phòng</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-shop sidebar-menu-item-icon"></i>
                    Phòng
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/RoomCategory">
                            Loại phòng
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/Room">
                            Danh sách phòng
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Quản lý sản phẩm</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-gift sidebar-menu-item-icon"></i>
                    Sản phẩm
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/ProductCategory">
                            Loại sản phẩm
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/Product">
                            Danh sách sản phẩm
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Khách hàng</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-cart-shopping sidebar-menu-item-icon"></i>
                    Đơn đặt hàng
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/OrderLists">
                            Danh sách đơn hàng 
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/OrdersRoom">
                            Danh sách phòng được đặt
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Giao hàng</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-truck-fast sidebar-menu-item-icon"></i>
                    Giao hàng
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/Shipped">
                            Danh sách giao hàng
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Bài viết</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-blog sidebar-menu-item-icon"></i>
                    Bài viết
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="~/Manager/Blog">
                            Danh sách bài viết
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>

    <main class="bg-light">
        <div class="p-2">
            <nav class="px-3 py-2 bg-white rounded shadow nav_menu">
                <i class="sidebar-toggle fa-solid fa-bars me-3 d-block d-md-none"></i>
                <h1 class="fw-bold mb-0 me-auto"></h1>
                <div class="dropdown">
                    <div class="d-flex align-items-center cursor-pointer dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @{
                            string? username = Context.Session.GetString("UserName");
                            if (username != "aaa_a")
                            {
                                <span class="me-2 d-none d-sm-block">@username</span>
                            }
                            if(username is null)
                            {
                                <span class="me-2 d-none d-sm-block">Xin Chào</span>
                            }
                        }
                        @{
                            string? userimage = Context.Session.GetString("UserImage");
                            if (userimage is not null)
                            {
                                <img class="navbar-profile-image" src="@userimage" alt="Image">
                            }
                            if (userimage is null)
                            {
                                <img class="navbar-profile-image" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSPzVNWWirLZJ6H95_YOLsLkxju6ZNaSxdj37F7nXfd29TXvBVI9PeZWrTfYEin-XBDnkk&usqp=CAU" alt="Image">
                            }
                        }
                         </div>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="~/Manager/Information">Thông tin người dùng</a></li>
                        <li><a class="dropdown-item" href="~/Logout/Index">Đăng xuất @RenderSection("Logout", required: false)</a></li>
                    </ul>
                </div>
            </nav>
        </div>
        <div>
            @RenderBody()
        </div>
    </main>
    <div id="toast"></div>
    @*Start - Base TempData*@
    @if (!string.IsNullOrEmpty(TempData["SuccessToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToast();
            });
        </script>
    }
    @*End - Base *@
     @*-------------------------------------------------------*@
    @*Start - Loading data TempData*@
    @if (!string.IsNullOrEmpty(TempData["SuccessLoadingDataToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessLoadingDataToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorLoadingDataToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorLoadingDataToast();
            });
        </script>
    }
    @*End - Loading data TempData*@
     @*-------------------------------------------------------*@
    @*Start - Login TempData*@
    @if (!string.IsNullOrEmpty(TempData["SuccessLoginToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessLoginToast();
            });
        </script>
    }
    @*End - Login TempData*@
     @*-------------------------------------------------------*@
    @*Start - Base ViewBag*@
    @if (!string.IsNullOrEmpty(ViewBag.SuccessToast))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToastViewBag();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(ViewBag.ErrorToast))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToastViewBag();
            });
        </script>
    }
    @*End - Base ViewBag*@
    @*-------------------------------------------------------*@
    <script>
        @*Start - Base TempData*@
            function showSuccessToast() {
                toast({
                    title: 'Thành công',
                    message: '@TempData["SuccessToast"]',
                    type: 'success',
                    duration: 2000
                });
            }
            function showErrorToast() {
                toast({
                    title: 'Thất bại',
                    message: '@TempData["ErrorToast"]',
                    type: 'error',
                    duration: 2000
                });
            }
        @*End - Base *@
        @*-------------------------------------------------------*@
        @*Start - LoadingData TempData*@
            function showSuccessLoadingDataToast() {
                toast({
                    title: 'Thành công',
                    message: '@TempData["SuccessLoadingDataToast"]',
                    type: 'success',
                    duration: 2000
                });
            }
        function showErrorLoadingDataToast() {
            toast({
                title: 'Thất bại',
                message: '@TempData["ErrorLoadingDataToast"]',
                type: 'error',
                duration: 2000
            });
        }
        @*End - LoadingData *@
        @*-------------------------------------------------------*@
        @*Start - Login TempData*@
            function showSuccessLoginToast() {
                toast({
                    title: 'Thành công',
                    message: '@TempData["SuccessLoginToast"]',
                    type: 'success',
                    duration: 2000
                });
            }
        @*End - Login TempData*@
        @*-------------------------------------------------------*@
        @*Start - Base ViewBag*@
            function showSuccessToastViewBag() {
                toast({
                    title: 'Thành công',
                    message: '@ViewBag.SuccessToast',
                    type: 'success',
                    duration: 2000
                });
            }

            function showErrorToastViewBag() {
                toast({
                    title: 'Thất bại',
                    message: '@ViewBag.ErrorToast',
                    type: 'error',
                    duration: 2000
                });
            }
        @*End - Base ViewBag*@
        @*-------------------------------------------------------*@
    </script>
    <script src="~/js/toastnotification.js"></script>
    <script src="//code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.print.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.colVis.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.excel.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
</body>
</html>
﻿<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/Service/SeriveCategory.css"></link>
    <link href="~/css/toastNotification.css" rel="stylesheet" />
    <link href="~/css/toastNotification.css" rel="stylesheet" />
    <link href="~/css/datatable.css" rel="stylesheet" />
</head>
<body>
    <h2 style="font-size: 40px; font-weight: bold; text-align:center">Chỉnh Sửa Loại Dịch Vụ Thú Cưng</h2>
    <div class="container">
        <form asp-action="EditServiceCategory" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
            <div class="row">
                <div class="col-25">
                    <label for="SerCategoriesName">Tên Dịch Vụ<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i> :</label>
                </div>
                <div class="col-75">
                    <input type="text" id="SerCategoriesName" name="SerCategoriesName" value="@Model?.SerCategoriesName">
                    <div style="color:red" class="error-message" id="fname-error-message"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="image">Ảnh:</label>
                </div>

                <div class="col-75">
                    <input type="file" id="image" name="image" onchange="changeImageSource()" style="margin-top:20px;margin-left:20px;" accept="image/*">

                    <img src="@Model?.Picture" height="100px" width="100px" style="float: left; margin-right: 10px;" id="imagePreview">

                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="Desciptions">Mô Tả<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i> :</label>
                </div>
                <div class="col-75">
                    <textarea id="Desciptions" name="Desciptions" placeholder="Nội Dung .." style="height:200px">@Model?.Desciptions</textarea>
                    <div style="color:red" class="error-message" id="subject-error-message"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="Status">Trạng thái:</label>
                </div>
                <div class="col-75">
                    <div class="switch">
                        <input type="checkbox" name="Status" class="toggles" @(Model?.Status ? "checked" : "") />
                        <label class="label @(Model.Status ? "active" : "inactive")"></label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                </div>
                <div class="col-75 btn-row">
                    <div class="btn-back">
                        <a type="submit" value="Cancal" href="/Manager/ServiceCategory" class="cancel">Trở lại</a>
                    </div>
                    <div class="btn-submit">
                        <input type="submit" value="Lưu chỉnh sửa">
                    </div>
                </div>
            </div>
        </form>

    </div>
    
</body>
</html>

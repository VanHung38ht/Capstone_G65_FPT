<body>
<h2>Thêm Loại Dịch Vụ Thú Cưng</h2>
<div class="container">
  <form asp-action="AddServiceCategory" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
    <div class="row">
      <div class="col-25">
        <label for="SerCategoriesName">Tên Dịch Vụ<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
      </div>
      <div class="col-75">
        <input type="text" id="SerCategoriesName" name="SerCategoriesName" placeholder="Tên Dịch Vụ.." required>
        <div style="color:red" class="error-message" id="fname-error-message"></div>
      </div>
    </div>
    <div class="row">
    <div class="col-25">
        <label for="image">Ảnh<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
    </div>

    <div class="col-75">
        <input type="file" id="image" name="image" onchange="changeImageSource()" style="margin-top:20px" required accept="image/*">

        <img src="~/img/icon/addicon.png" height="100px" width="100px" style="float: left; margin-right : 10px;" id="imagePreview">

    </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="Desciptions">Mô Tả<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
      </div>
      <div class="col-75">
        <textarea id="Desciptions" name="Desciptions" placeholder="Nội Dung .." style="height:200px" required></textarea>
        <div style="color:red" class="error-message" id="subject-error-message"></div>
      </div>
    </div>

﻿<!doctype html>
<html class="no-js" lang="en">
    <head>
    <meta property="og:url" content="https://pet-service.azurewebsites.net/home/BlogDetail?blogId=@Model.BlogDetail.BlogId" />
    <meta property="og:type" content="Pet Service" />
    <meta property="og:title" content="@Model.BlogDetail.Heading" />
    <meta property="og:description" content="@Model.BlogDetail.Description" />
    <meta property="og:image" content="https://pet-service.azurewebsites.net@Model.BlogDetail.ImageUrl" />

    <!-- Thẻ meta Twitter Card cho Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@Model.BlogDetail.Heading">
    <meta name="twitter:description" content="@Model.BlogDetail.Description">
    <meta name="twitter:image" content="https://pet-service.azurewebsites.net@Model.BlogDetail.ImageUrl">
    </head>
<body class="sticky-header overflow-md-visible">
    <!-- End Header -->

    <main class="main-wrapper">
        <!-- Start Blog Area  -->
        <div class="axil-blog-area axil-section-gap">
            <div class="axil-single-post post-formate post-standard">
                <div class="container">
                    <div class="content-block">
                        <div class="inner">
                            <div class="post-thumbnail">
                                <img class="pinterest-img" style="width: 1300px; height: 600px;" src="@Model.BlogDetail.ImageUrl" alt="blog Images">
                            </div>
                            <!-- End .thumbnail -->
                        </div>
                    </div>
                    <!-- End .content-blog -->
                </div>
            </div>
            <!-- End .single-post -->
            <div class="post-single-wrapper position-relative">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-1">
                            <div class="d-flex flex-wrap align-content-start h-100">
                                <div class="position-sticky sticky-top">
                                    <div class="post-details__social-share">
                                        <span class="share-on-text">Share on:</span>
                                        <div class="social-share">
                                            <a class="st_facebook" 
                                                st_url="https://pet-service.azurewebsites.net/home/BlogDetail?blogId=@Model.BlogDetail.BlogId"
                                                st_title="@Model.BlogDetail.Heading"
                                                st_image="https://pet-service.azurewebsites.net@Model.BlogDetail.ImageUrl">
                                            </a>
                                            <span class="st_twitter" 
                                                st_url="https://pet-service.azurewebsites.net/home/BlogDetail?blogId=@Model.BlogDetail.BlogId"
                                                st_title="@Model.BlogDetail.Heading"
                                                st_image="https://pet-service.azurewebsites.net@Model.BlogDetail.ImageUrl">
                                            </span>
                                            <span class="st_linkedin" 
                                                st_url="https://pet-service.azurewebsites.net/home/BlogDetail?blogId=@Model.BlogDetail.BlogId"
                                                st_title="@Model.BlogDetail.Heading"
                                                st_image="https://pet-service.azurewebsites.net@Model.BlogDetail.ImageUrl">
                                            </span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 axil-post-wrapper">
                            <div class="post-heading">
                                <h2 class="title">@Model.BlogDetail.Heading</h2>
                                <div class="axil-post-meta">
                                    <div class="post-meta-content">
                                        <ul class="post-meta-list">
                                            <li>@Model.BlogDetail.PublisheDate?.ToString("dd/MM/yyyy")</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            @Html.Raw(@Model.BlogDetail.Content)

                        </div>

                        <div class="col-lg-4">
                            <!-- Start Sidebar Area  -->
                            <aside class="axil-sidebar-area">

                                <!-- Start Single Widget  -->
                                <div class="axil-single-widget mt--40">
                                    <span class="title-highlighter highlighter-primary mb--10"> <i class="fal fa-bell"></i>Hot News</span>
                                    <h6 class="widget-title">Danh sách bài viết mới nhất</h6>

                                    <!-- Start Single Post List  -->
                                    @foreach (var blog in Model.ListBlogTop3)
                                    {
                                    <div class="content-blog post-list-view mb--20">
                                        <div id="iamgeURL" class="thumbnail">
                                            <a href="~/Home/BlogDetail?blogId=@blog.BlogId">
                                                <img src="@blog.ImageUrl" alt="Blog Images">
                                            </a>
                                        </div>
                                        <div class="content">
                                            <h6 id="title" class="title"><a href="~/Home/BlogDetail?blogId=@blog.BlogId">@blog.PageTile</a></h6>
                                            <div class="axil-post-meta">
                                                <div class="post-meta-content">
                                                    <ul href="~/Home/BlogDetail?blogId=@blog.BlogId">
                                                        <li>@blog.PublisheDate?.ToString("dd/MM/yyyy")</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                    <!-- End Single Post List  -->

                                </div>
                                <!-- End Single Widget  -->
                                <!-- Start Single Widget  -->
                                <div class="axil-single-widget mt--40">
                                    <span class="title-highlighter highlighter-primary mb--10"> <i class="fal fa-bell"></i>Sản Phẩm Hot</span>
                                    <h6 class="widget-title">Danh sách sản phẩm bán chạy nhất</h6>
                                    <ul class="product_list_widget recent-viewed-product">
                                        <!-- Start Single product_list  -->
                                        @foreach (var product in Model.ListProductTop3)
                                        {
                                            <li>
                                            <div class="thumbnail">
                                                <a href="blog-details.html">
                                                    <img src="@product.Picture" alt="Blog Images">
                                                </a>
                                            </div>
                                            <div class="content">
                                                <h6 class="title"><a href="blog-details.html">@product.ProductName</a></h6>
                                                <div class="product-meta-content">
                                                    <span class="woocommerce-Price-amount amount">@($"{product.Price:n0}".Replace(",", ".")) VNĐ</span>
                                                    <p class="price sold">Đã bán: @product.QuantitySold</p>
                                                </div>
                                            </div>
                                        </li>
                                        }
                                        <!-- End Single product_list  -->
                                    </ul>

                                </div>

                            </aside>
                            <!-- End Sidebar Area -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Blog Area  -->

        <!-- Start Related Blog Area  -->
        <div class="related-blog-area bg-color-white pb--60 pb_sm--40">
            <div class="container">
                <div class="section-title-wrapper mb--70 mb_sm--40 pr--110">
                    <h3 class="mb--25">Danh sách bài viết</h3>
                </div>
                <div class="related-blog-activation slick-layout-wrapper--15 axil-slick-arrow  arrow-top-slide">
                    
                        @foreach (var blog in Model.Blog)
                        {   
                            @if (@blog.Status == true)
                                {
                             <div class="slick-single-layout">
                               <div class="content-blog">
                                 <div class="inner">
                                     <div class="axil-gallery-activation axil-slick-arrow arrow-between-side">
                                                    <!-- Start Single Thumb  -->
                                     <div class="thumbnail">
                                        <a href="~/Home/BlogDetail?blogId=@blog.BlogId">
                                          <img src="@blog.ImageUrl" style="height:200px;width:100%;" alt="Blog Images">
                                        </a>
                                     </div>
                                                    <!-- End Single Thumb  -->
                                     </div>
                                     <div class="content"  style="margin-top:50px;">
                                         <h5 class="title"><a href="~/Home/BlogDetail?blogId=@blog.BlogId">@blog.PageTile</a></h5>
                                           <div class="axil-post-meta">
                                      </div>
                                  </div>
                                </div>
                               </div>
                           </div>
                        }
                    }
                </div>
            </div>
        </div>
@*<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>*@
        <script type="text/javascript" src="~/js/sharesocialnetwork.js"></script>
<script type="text/javascript">
        stLight.options({
                publisher:'12345'
        });
</script>

    </main>
</body>

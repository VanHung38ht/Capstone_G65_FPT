<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="robots" content="noindex, follow" />
        <meta name="description" content>
        <meta name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="~/css/RoomCustomer.css">
    </head>

    <body class="sticky-header">
        <main class="main-wrapper">
            <!-- Start Breadcrumb Area  -->
            <div class="axil-breadcrumb-area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-8">
                            <div class="inner">
                                <ul class="axil-breadcrumb">
                                    <li class="axil-breadcrumb-item"><a
                                            href="/Home">Trang chủ</a></li>
                                    <li class="separator"></li>
                                    <li class="axil-breadcrumb-item active"
                                        aria-current="page">Dịch vụ</li>
                                </ul>
                                <h1 class="title">Danh sách dịch vụ</h1>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-4">
                            <div class="inner">
                                <div class="bradcrumb-thumb">
                                    <img
                                        src="~/img/Service/Service_preview_rev_2.png"
                                        alt="Image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Breadcrumb Area  -->
            <!-- Start Shop Area  -->
            <div class="axil-shop-area axil-section-gap bg-color-white">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="axil-shop-top mb--40">
                                <div
                                    class="category-select align-items-center justify-content-lg-end justify-content-between">
                                    <span class="filter-results">
                                        <form method="get">
                                            @{
                                            if
                                            (!string.IsNullOrEmpty(ViewBag.sortby))
                                            {
                                            <input type="hidden" name="sortby"
                                                value="@ViewBag.sortby">
                                            }
                                            <div class="relative">
                                                <input
                                                    class="input-cal input-base"
                                                    value="@(ViewBag.CategoriesName)"
                                                    name="servicename"
                                                    id="input"
                                                    placeholder type="text">
                                                <label id="label-input">Tên dịch vụ</label>
                                            </div>
                                            }
                                        </form>
                                    </span>
                                    <form method="get">
                                        @{ if
                                        (!string.IsNullOrEmpty(@ViewBag.CategoriesName))
                                        {
                                        <input type="hidden" name="servicename"
                                            value="@ViewBag.CategoriesName"> }

                                        <select id="sortby" name="sortby"
                                            class="single-select"
                                            onchange="this.form.submit();">
                                            <!option value="name_asc" @(ViewBag.sortby == "name_asc" ? "selected" : "")>Tên từ A-Z</!option>
                                            <!option value="name_desc" @(ViewBag.sortby == "name_desc" ? "selected" : "")>Tên từ Z-A</!option>
                                        </select> }
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row row--15">
                        @foreach (var service in Model)
                        {
                        @if (service.Status)
                        {
                        string description = service.Desciptions;
                        @if (service.Desciptions != null)
                        {
                        if (description.Length > 100)
                        {
                        int lastSpace = description.LastIndexOf(' ', 100);

                        description = (lastSpace > 0) ? description.Substring(0,
                        lastSpace) + "..." : description.Substring(0, 300) +
                        "...";
                        }
                        }
                        else
                        {
                        description = service.Desciptions;
                        }
                        <div class="col-xl-3 col-lg-4 col-sm-6">
                            <div
                                class="axil-product product-style-one has-color-pick mt--40">
                                <div class="thumbnail">
                                    <a
                                        href="~/Home/ServiceDetail?serviceCategoryId=@service.SerCategoriesId">
                                        <img src="@service.Picture"
                                            style="width:100%;height:200px;"
                                            alt="Product Images">
                                    </a>
                                </div>
                                <div class="product-content">
                                    <div class="inner">
                                        <h2 class="title" style="color:black; "><a
                                                href="~/Home/ServiceDetail?serviceCategoryId=@service.SerCategoriesId">@service.SerCategoriesName</a></h2>
                                        <div class="product-price-variant"
                                            style=" margin-left:4px;">
                                            <span>@description</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }

                        }
                        <!-- End Single Product  -->
                    </div>
                </div>
                <!-- End .container -->
            </div>
        </main>
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script>
    function sortBy(value) {
        // Check if the selected value is the default option (A-Z)
        if (value === "name_asc") {
            // Set the hidden input value to A-Z and clear the search input
            document.getElementById('sortby').value = "name_asc";
            document.getElementById('sortby').value = "";
        } else {
            // Set the hidden input value to the selected sorting option
            document.getElementById('sortby').value = value;
        }

        // Submit the form
        document.getElementById('sortForm').submit();
    }
</script>

    </body>
    <script src="~/assets/js/vendor/modernizr.min.js"></script>
    <!-- jQuery JS -->
    <script src="~/assets/js/vendor/jquery.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/assets/js/vendor/popper.min.js"></script>
    <script src="~/assets/js/vendor/bootstrap.min.js"></script>
    <script src="~/assets/js/vendor/slick.min.js"></script>
    <script src="~/assets/js/vendor/js.cookie.js"></script>
    <!-- <script src="~/assets/js/vendor/jquery.style.switcher.js"></script> -->
    <script src="~/assets/js/vendor/jquery-ui.min.js"></script>
    <script src="~/assets/js/vendor/jquery.ui.touch-punch.min.js"></script>
    <script src="~/assets/js/vendor/jquery.countdown.min.js"></script>
    <script src="~/assets/js/vendor/sal.js"></script>
    <script src="~/assets/js/vendor/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/js/vendor/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets/js/vendor/isotope.pkgd.min.js"></script>
    <script src="~/assets/js/vendor/counterup.js"></script>
    <script src="~/assets/js/vendor/waypoints.min.js"></script>

    <!-- Main JS -->
    <script src="~/assets/js/main.js"></script>
</html>
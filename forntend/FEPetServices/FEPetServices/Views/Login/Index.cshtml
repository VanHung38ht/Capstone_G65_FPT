@model FEPetServices.Form.LoginForm
@{
    string returnUrl = Context.Request.Query["ReturnUrl"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Login.css">
    <script src="https://smtpjs.com/v3/smtp.js">
    </script>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form class="login-form" method="post">
                    <div class="header">
                        <a href="~/Home" >
                            <ion-icon name="home-outline"></ion-icon>
                        </a>
                        <h2>Đăng nhập</h2>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input asp-for="Email" type="email" required>
                        <label for="">Email</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="Password" type="password" required>
                        <label for="">Mật khẩu</label>
                    </div>
                    <div class="forget">
                        <label for=""><input type="checkbox">Ghi nhớ tài khoản  </label>
                        <label>
                            <a href="~/ForgotPassword/Index">Quên mật khẩu</a>
                            @*<a href="#">Quên mật khẩu</a>*@
                        </label>
                    </div>
                    <button id="loginButton" asp-route-returnUrl="@returnUrl">Đăng nhập</button>
                    <div class="register">
                        <p>Nếu bạn chưa có tài khoản hãy <a href="~/Register/Index">Đăng ký</a></p>
                    </div>
                    <div class="register">
                        <p><a href="~/PartnerRegister/Index">Đăng ký</a> trở thành đối tác</p>
                    </div>
                    @*<div class="register">
                        <a style="cursor:pointer;text-align:center; text-decoration:none" href="~/Home">Về trang chủ</a>
                    </div>*@
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <style>
        .header {
            display: flex;
            align-items: center;
            width: 100%;
        }

            .header a {
                text-decoration: none; 
            }

            .header ion-icon {
                font-size: 24px;
                color: #fff;
                padding-top: 5px;
                /*border: 1px solid #FAA088;
                padding: 5px;
                border-radius: 20px;*/
            }
    </style>
</body>
</html>

